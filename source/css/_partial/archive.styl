.archive {
  margin: 1em auto;
  background-color: pink;
  border: 1px solid #DDD;
  box-shadow: 0 0 2px #DDD;

  .post-archive {
    margin: 0 2em 0 2em;
    background-color: black;
    list-style: none;
    padding: .5em;
    border-radius 1em;

    .post-item {
      margin: 5px 2em 0 2em;

      .post-date {
        display: inline-block;
        margin-right: 10px;
        color: #BABABA;
      }

      .post-title {
        color: white;
        text-decoration: none;
        
        &:hover{
          color: skyblue;
        }
      }
    }
  }
}